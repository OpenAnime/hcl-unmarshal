{
    "name": "@openanime/hcl-unmarshal",
    "version": "1.0.4",
    "description": "A lightweight, zero-dependency TypeScript library that converts HashiCorp Configuration Language (HCL) into plain JSON objects. Seamlessly runs in Node.js, modern web browsers, and React Native environments.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "tsup && pnpm start",
        "build": "tsup",
        "lint": "prettier --check . && eslint .",
        "lint:fix": "prettier --write . && eslint . --fix"
    },
    "keywords": [
        "hcl",
        "hcl2json",
        "hcl-unmarshal",
        "terraform",
        "parser",
        "configuration",
        "json",
        "typescript",
        "javascript",
        "pure-js",
        "zero-dependency",
        "react-native",
        "browser",
        "nodejs"
    ],
    "author": "SpongeBed81",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@eslint/js": "^9.1.1",
        "@swc/core": "^1.4.17",
        "@types/jest": "^29.5.14",
        "eslint": "^9.1.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-simple-import-sort": "^12.1.0",
        "globals": "^15.1.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.3.2",
        "tslib": "^2.6.2",
        "tsup": "^8.0.2",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.8.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": ["<rootDir>/__tests__"]
    },    
    "type": "module"
}